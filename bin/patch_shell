#!/bin/zsh


RC_FILE="$HOME/.zsh_profile"

if [ ! -f "$RC_FILE" ]; then


   echo "#!/bin/zsh" >> $RC_FILE 


fi


if grep -q "# ca2 patch_shell" "$RC_FILE"; then


   echo "\"$RC_FILE\" is already patched."


else


   echo "" >> $RC_FILE
   echo "" >> $RC_FILE
   echo "" >> $RC_FILE
   echo "" >> $RC_FILE
   echo "# ca2 patch_shell" >> $RC_FILE
   echo "" >> $RC_FILE
   echo "" >> $RC_FILE
   echo "PATH=\$HOME/solution/basis/operating-system/tool-macos/bin:\$PATH" >> $RC_FILE
   echo "" >> $RC_FILE
   echo "" >> $RC_FILE
   echo "export PATH" >> $RC_FILE
   echo "" >> $RC_FILE
   echo "" >> $RC_FILE
   echo "# end ca2 patch_shell + 4 new lines" >> $RC_FILE
   echo "" >> $RC_FILE
   echo "" >> $RC_FILE
   echo "" >> $RC_FILE
   echo "" >> $RC_FILE

   echo "Successfully patched \"$RC_FILE\""


fi



